  "description": "Quantum-resistant patent registry on QANplatform",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:testnet": "hardhat run --network qanTestnet scripts/deploy.js",
    "deploy:mainnet": "hardhat run --network qanMainnet scripts/deploy.js",
    "verify": "hardhat verify",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write '**/*.{js,ts,json,md}'",
    "gas-reporter": "hardhat test --network hardhat"
  },
  "keywords": [
    "blockchain",
    "patent",
    "quantum-resistant",
    "qanplatform",
    "smart-contracts",
    "ipfs"
